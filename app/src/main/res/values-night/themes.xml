<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base della tua applicazione per la modalità scura -->
    <style name="Base.Theme.TutorMatch" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colore di sfondo dell'app, dinamico tra modalità chiara e scura -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Colore di sfondo delle attività -->
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- Colore della barra di stato, dinamico tra modalità chiara e scura -->
        <item name="android:statusBarColor">@color/statusBarColor</item>

        <!-- Imposta icone chiare su sfondo scuro -->
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <!-- Tema principale della tua applicazione -->
    <style name="Theme.TutorMatch" parent="Base.Theme.TutorMatch" />
</resources>
