<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Nome e cognome del tutor -->
        <TextView
            android:id="@+id/tutor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nomeCognome"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Spinner per selezionare la valutazione -->
        <Spinner
            android:id="@+id/spinner_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:entries="@array/rating_values"
            android:layout_marginStart="16dp" />

        <!-- Bottone per confermare la valutazione -->
        <Button
            android:id="@+id/button_submit_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/coloreSecondario"
            android:text="@string/valuta"
            android:textColor="@color/colorBackground"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
